.row
	.col-xs-12
		h1 {{year.year}} 
			small {{year.shows.length}} shows, {{year.duration | humanizeTime:true}}

		ol.breadcrumb
			li
				a(href='/') {{$root.config.artist_name}}
			li.active {{year.year}}
		table.table.table-striped.table-hover.sortable
			thead
				th(data-defaultsort='asc') Date
				th Tracks
				th Duration
				th Avg. Rating
				th Reviews
			tbody
				tr(ng-repeat="show in year.shows")
					td(data-value="{{show.date}}").nopadding
						a(href='/years/{{show.year}}/shows/{{show.date | formatDate:"YYYY-MM-DD"}}').block {{show.date | formatDate:"MM-DD-YYYY"}}
					td(data-value="{{show.track_count}}") {{show.track_count}}
					td(data-value="{{show.duration}}") {{show.duration | humanizeTime:true}}
					td(data-value="{{show.average_rating}}") {{show.average_rating}}
					td(data-value="{{show.reviews_count}}") {{show.reviews_count}}
